root = true
[*.{js,ts,tsx,vue,css,sass,scss}]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = tru

[*.{html,pug}]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true

[{makefile,Makefile}]
indent_size = 1
indent_style = tab
tab_width = 4

[*.{py,conf}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false